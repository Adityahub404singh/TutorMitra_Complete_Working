{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "NodeNext",                     // Node.js ke ES Modules ke liye sahi hai
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                    // Type checking ko jaldi karne ke liye, usually fine hai
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],   // src/types me custom types rakhne ke liye
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
